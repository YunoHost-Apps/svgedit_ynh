#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# INSTALL DEPENDENCIES
#=================================================
ynh_script_progression "Installing dependencies..."

ynh_nodejs_install

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

ynh_setup_source --dest_dir="$install_dir/source"

#=================================================
# BUILD WITH NPM
#=================================================
ynh_script_progression "Building $app..."

pushd "$install_dir/source"
    ynh_hide_warnings npm install
    ynh_hide_warnings npm run build
popd

ynh_safe_rm "$install_dir/source/node_modules"
ynh_safe_rm "$install_dir/.cache"
ynh_safe_rm "$install_dir/.npm"

mv "$install_dir/source/dist/editor" "$install_dir/www"

#=================================================
# SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Adding system configurations related to $app..."

ynh_config_add_nginx

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
